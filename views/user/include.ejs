<% include ../partials/header %>

<div class="container animated fadeInUp">
  <div class="parent">
    <div class="form" style="text-align: center;">
			<div class="row">
				<div class="shadow-lg p-3 mb-5 bg-white rounded">
					<form action='/session/<%= session._id %>/instructor/new' method="POST">
						<h2>Add Instructor</h2>
						<hr>
						<div class="form-row">
							<div class="form-group col-md-12">
								<select name="new_instructor" multiple class="form-control">
									<% instructors.forEach(function(instructor) { %>
										<option value="<%= instructor._id %>"><%= instructor.firstName %> <%= instructor.lastName %></option>
									<% }) %>
								</select>
							</div>
						</div>
						<hr>
						<div class="row">
							<div class="col-md-6">
								<button class="btn btn-primary btn-sm" type="submit">Submit</button>
							</div>
							<div class="col-md-6">
								<a href="/session/<%= session._id %>" class="btn btn-danger btn-sm">Cancel</a>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

<% include ../partials/footer %>